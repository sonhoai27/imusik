<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clickable="true"
    android:background="@drawable/ripple_bg_song_ls"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginRight="16dp"
        android:id="@+id/imgSongCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_album" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtSongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You And I"
                android:textColor="#444"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtSongSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You And I"
                android:textColor="#999"
                android:textSize="14dp" />
            <LinearLayout
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_headset_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtSongLuotNghe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#999"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:clickable="true"
            android:padding="8dp"
            android:background="@drawable/ripple_radius"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_marginRight="16dp"
            android:id="@+id/btnMoreInfoSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>